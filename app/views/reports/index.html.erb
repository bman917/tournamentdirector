<h2 class="squad_title">Reports</h2>

<h3>Rankings</h3>

<% selected_tournament.game_types.each do | game_type | %>
<h4><%=game_type %></h4>
<%=selected_tournament.squad_entries(game_type).limit(3)%>
<% end %>

<h3>Entries Per Bowling Association</h3>

<div class="report">
  <table>
      <thead>
        <tr>
          <th>Associations</th>
          <th>Number of Entries</th>
          <th>Action</th>
        </tr>
    </thead>
 <tbody>
  <%@bowling_associations.each do | ass |%>
    <tr>
      <td><%=ass.name%></td>
      <td><%=link_to selected_tournament.bowling_association_entries(ass).count, reports_show_entries_path(ass)%></td>
      <td><%=link_to 'Show Entries Per Bowler', reports_show_entries_path(ass)%></td>
    </tr>
  <%end%>
   </tbody>
</table>
</div>


