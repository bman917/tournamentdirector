<div class="title">
  <div class="squad_title">
    <span>Show All Squads</span>
  </div>
</div>


<table>
  <thead>
    <tr>
      <th></th>
      <th>Squad Name</th>
      <th>Roll-off Time</th>

      <% if current_user.admin? %>
      <th>Game</th>
      <th></th>
      
      <% end %>

    </tr>
  </thead>

  <tbody>
    <% @tournament.squads.each do |squad| %>
    <tr class=<%=cycle 'o', 'e'%>>
      <td><%= link_to "Show Entries (#{squad.squad_entries.size})", squad %></td>
      <td><%= squad.name %></td>
      <td><%= squad.time.to_s(:squad_time) %></td>
      <% if current_user.admin? %>
        <td>
        
          <div class="actions">
                <ul class="actions">
                  <% squad.tournament.game_types. each do |game_type|%>
                  <li><%= link_to game_type.name, new_squad_entry_path(squad, game_type.id) %></li>
                  <% end %>
                </ul>
          </div>

        </td>
        <td><%= link_to 'Edit Squad Details', edit_squad_path(squad) %></td>
        <!--td><%= link_to 'Delete!!!', squad, method: :delete, data: { confirm: 'Are you sure?' } %></td-->

        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<div class="page_nav">
<%= link_to('Add New Squad', new_squad_path, class:'new_link') if current_user.admin? %>
<br/>
</div>


