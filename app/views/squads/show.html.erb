<div class="title">
	<div class="entries_title">
		<span>Entries</span>

			<div class="entries_actions">
		Add: (
		<%= link_to 'Singles', new_squad_entry_path(@squad, 'Singles') %>,
		<%= link_to 'Doubles', new_squad_entry_path(@squad, 'Doubles') %>,
		<%= link_to 'Team', new_squad_entry_path(@squad, 'Team') %></li>
		)
		   </div>
	</div>
</div>

<table id="squad_entries_table">
<tr>
	<th></th>
	<th>Game Type</th>
	<th>Division</th>
	<th>Bowler(s)</th>
	<th>Games</th>
	<th>Total</th>
	<th>Actions</th>
</tr>

<% @squad.squad_entries.sort!.each do | squad_entry |%>
<tr class=<%=cycle 'o', 'e'%>>
	<td><%= link_to 'Show', squad_entry_games_path(squad_entry)%></td>
	<td><%= squad_entry.entry_type %></td>
	<td><%= squad_entry.category %></td>
	<td><%= squad_entry.bowler_names %></td>
	<td><%= squad_entry.games.size%></td>
	<td><%= squad_entry.total_pinfalls%></td>
	<td><%= link_to 'Add Game', new_squad_entry_game_path(squad_entry) %>, 
	     <%= link_to 'Delete', squad_entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>

</tr>

<% end %>

</table>
