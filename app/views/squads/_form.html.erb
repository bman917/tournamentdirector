  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, value: @next_squad_number %>
  </div>
  <div class="field">
    <%= f.label :time %><br />
    <%= f.datetime_select :time %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
