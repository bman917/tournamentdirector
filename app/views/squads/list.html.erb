<div class="title">
  <div class="squad_title">
    <span>SQUADS</span>
    
      <%= link_to '(Add New Squad)', new_squad_path(@tournament), class:'add' %>
    

  </div>
</div>


<table>
  <thead>
    <tr>
      <th></th>
      <th>Squad Name</th>
      <th>Roll-off Time</th>
      <th>Add Entry</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @squads.each do |squad| %>
    <tr class=<%=cycle 'o', 'e'%>>
      <td><%= link_to "Show Entries (#{squad.squad_entries.size})", squad %></td>
      <td><%= squad.name %></td>
      <td><%= squad.time.to_s(:squad_time) %></td>
      <td>
        <div class="actions">
              <ul class="actions">
                <% squad.tournament.game_types. each do |game_type|%>
                <li><%= link_to game_type.name, new_squad_entry_path(squad, game_type.id) %></li>
                <% end %>
              </ul>
        </div>
      </td>
      <td><%= link_to 'Edit', edit_squad_path(squad) %></td>
      <td><%= link_to 'Delete!!!', squad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="page_nav">
<%= link_to 'New Squad', new_squad_path(@tournament), class:'new_link' %><br/>
</div>


<h2 class="squad_title">Reports</h2>

<div class="report">
  <table>
      <thead>
        <tr>
          <th>Participating Associations</th>
          <th>Number of Entries</th>
        </tr>
    </thead>
 <tbody>
  <%@tournament.participating_associations.each do | ass |%>
    <tr>
      <td><%=ass.name%></td>
      <td><%=@tournament.bowling_association_entries(ass).count%></td>
    </tr>
  <%end%>
   </tbody>
</table>
</div>



<div class="report">
  <table>
      <thead>
        <tr>
          <th>Bowler Name</th>
          <th>Number of Entries</th>
        </tr>
    </thead>
 <tbody>
  <%@tournament.bowlers.each do | b |%>
    <tr>
      <td><%=b.name%></td>
      <td><%=b.get_tournament_entries(@tournament).count%></td>
    </tr>
  <%end%>
   </tbody>
</table>
</div>