<h1>Listing bowlers</h1>
<%= link_to('New Bowler', new_bowler_path) if admin?%>
</br>
<%= form_tag bowlers_path, :method => 'get', id: 'search_form' do %>
  <p>
    <%= label_tag(:search, "Bowler Name: ")%>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
</br>
<%= will_paginate @posts %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Association </th>
      <th>PBC Classification </th>
      <th>Average</th>
      <%if admin? %>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <%end%>
    </tr>
  </thead>

  <tbody>
    <% @bowlers.each do |bowler| %>
    <tr>
      <td><%= bowler.name %></td>
      <td><%= bowler.gender %></td>
      <td><%= bowler.bowling_association %></td>
      <td><%= bowler.pbc_classification %></td>
      <td><%= bowler.latest_average %></td>

      <% if admin? %>
      <td><%= link_to 'Update Average', new_average_entry_path(bowler) %></td>
      <td><%= link_to 'Show', bowler %></td>
      <td><%= link_to 'Edit', edit_bowler_path(bowler) %></td>
      <td><%= link_to 'Delete', bowler, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @posts %>
<br />

<%= link_to('New Bowler', new_bowler_path) if admin?%>
