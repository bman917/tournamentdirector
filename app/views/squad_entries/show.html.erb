
<div class="title">
  <div class="games_title">
    <span>Recorded Games</span>
    <%=link_to('(Add Game)', new_squad_entry_game_path(@squad_entry), class: 'add') unless @squad_entry.has_games?%>
  </div>
</div>

<% if @squad_entry.has_games? %>

  <table id="bowlers">
    <tr>
          <th>Bowler Name</th>
      <%  (1..@squad_entry.games_recorded).each do |i| %>
          <th>Game <%=i%></th>
      <% end %>
          <th>Actions</th>
    </tr>

  <% @squad_entry.bowlers.each do | bowler | %>
      <tr>
          <td><%=bowler%></td>
        <% @squad_entry.games_of_bowler(bowler.id).each do | game| %>
          <td><%="#{game.score}"%></td>
        <% end %>

          <td>Edit</th>
      </tr>
  <% end %>
  </table>
<% else %>

  <table id="bowlers">
    <th>No Games In Record - (<%= link_to 'Add Game', new_squad_entry_game_path(@squad_entry) %>)</th>
  </table>


<% end %>

<% if @squad_entry %>
  <%= link_to "Back", squad_path(@squad_entry.squad)%>
  
<% end %>
