<div class="title"><h1 class="games_title">Record New Game</h1></div>


<%= form_tag(create_squad_entry_game_path(@squad_entry), method: "post") do %>
	<table id="bowlers">
		<tr>
			<th>Bowler Name</th>
			<th>Score</th>
		</tr>
		<% @squad_entry.bowlers.each do | bowler | %>
			<tr>
				<td><%=bowler.name%></td>
				<td><%= number_field_tag("score_#{bowler.id}")%></td>
			</tr>
		<% end %>
	</table>
	  <div class="actions">
	    <%= submit_tag("Add") %>
	  </div>
<% end %>


